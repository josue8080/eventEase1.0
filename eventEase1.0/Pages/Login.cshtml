@page
@model eventEase1._0.Pages.LoginModel
@{
	ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EventEase | Login Page</title>
    <style>
        body {
            background-color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .login-container {
            max-width: 900px;
            width: 100%;
        }

        .login-card {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }

        .login-btn {
            background-color: #0d6efd;
            color: white;
            width: 100%;
        }

            .login-btn:hover {
                background-color: #0a58ca;
            }

        .form-control {
            border-radius: 5px;
        }

        .login-image {
            max-width: 100%;
            border-radius: 10px;
        }

        .forgot-password {
            color: #0d6efd;
            text-decoration: none;
        }

            .forgot-password:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container login-container">
        <div class="row align-items-center">
            <div class="col-md-6 text-center d-none d-md-block">
                <img src="~/images/undraw_secure-login_m11a.svg" alt="Login Image" class="login-image">
            </div> 
            <div class="col-md-6">
                <div class="login-card">
                    <h2 class="text-center fw-bold mb-4">Welcome Back</h2>
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email Address</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="#" class="forgot-password">Forgot Password?</a>

                        </div>
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger mt-3" role="alert">
                                @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <div>@modelError.ErrorMessage</div>
                                }
                            </div>
                        }
                        <button type="submit" class="btn login-btn mt-3">Login</button>


                    </form>
                    <p class="text-center mt-3">Don't have an account? <a href="Signup" class="forgot-password">Sign up</a></p>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
