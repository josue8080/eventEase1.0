@page
@model eventEase1._0.Pages.PendingApprovalModel
@{
    ViewData["Title"] = "Pending Approval";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pending Approval - EventEase</title>
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <style>
        :root {
            --primary: #1976D2;
            --light-primary: #CFE8FF;
            --grey: #eee;
            --dark: #363949;
            --light: #f6f6f9;
            --warning: #FBC02D;
            --light-warning: #FFF2C6;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background: var(--grey);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .approval-container {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            padding: 40px;
            width: 100%;
            max-width: 500px;
            text-align: center;
        }

        .approval-icon {
            font-size: 80px;
            color: var(--warning);
            margin-bottom: 20px;
        }

        h1 {
            color: var(--dark);
            margin-bottom: 15px;
            font-size: 28px;
        }

        p {
            color: var(--dark);
            margin-bottom: 30px;
            line-height: 1.6;
        }

        .status-info {
            background: var(--light-warning);
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

            .status-info i {
                font-size: 24px;
                color: var(--warning);
            }

        .action-buttons {
            display: flex;
            gap: 15px;
            justify-content: center;
        }

        .btn {
            padding: 12px 25px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background: var(--primary);
            color: white;
        }

            .btn-primary:hover {
                background: #1565C0;
            }

        .btn-outline {
            border: 1px solid var(--primary);
            color: var(--primary);
            background: white;
        }

            .btn-outline:hover {
                background: var(--light-primary);
            }

        .contact-support {
            margin-top: 30px;
            font-size: 14px;
            color: var(--dark);
        }

            .contact-support a {
                color: var(--primary);
                text-decoration: none;
            }
    </style>
</head>
<body>
    <div class="approval-container">
        <div class="approval-icon">
            <i class='bx bx-time-five'></i>
        </div>

        <h1>Account Pending Approval</h1>

        <p>Thank you for registering as a manager. Your account is currently under review by our administration team.</p>

        <div class="status-info">
            <i class='bx bx-info-circle'></i>
            <span>You'll receive an email notification once your account is approved.</span>
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="status-info" style="margin-top: -15px; margin-bottom: 15px;">
                <i class='bx bx-message-detail'></i>
                <span>@TempData["Message"]</span>
            </div>
        }

        <div class="action-buttons">
            <a href="/" class="btn btn-primary">Return Home</a>
            <a href="/Contact" class="btn btn-outline">Contact Support</a>
        </div>

        <div class="contact-support">
            Need help? <a href="mailto:support@eventease.com">Email our support team</a>
        </div>
    </div>
</body>
</html>